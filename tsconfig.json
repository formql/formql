{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "types": ["jest"],
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "@formql/core": [
        "packages/core/src/public_api.ts"
      ],
      "@formql/editor": [
        "packages/editor/src/public_api.ts"
      ],
      "@formql/material": [
        "packages/material/src/public_api.ts"
      ]
    }
  }
}